updatedBal = balance
monIntRate = annualInterestRate/12
def monPay():
    return monthlyPaymentRate*updatedBal


def payMin():
    global updatedBal
    updatedBal -= monPay()
    updatedBal = updatedBal + monIntRate*updatedBal

for month in range(12):
    #print('month '+str(month)+ ' remaining balance:' + str(round(updatedBal, 2)))
    payMin()
    
print('Remaining balance:' + str(round(updatedBal, 2)))
